<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="12dp">

        <com.vinaygaba.creditcardview.CreditCardView
                android:id="@+id/ccv"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_marginBottom="12dp"
                app:cardFrontBackground="@drawable/cardbackground_world"
                app:isEditable="true"
                app:type="auto" />

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_generic_ket"
                style="@style/DataInput.TextInputLayout"
                android:hint="@string/til_hint_keterangan">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:clickable="true">


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_generic_data"
                style="@style/DataInput.TextInputLayout"
                tools:hint="Generic Data">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_generic_ket"
                style="@style/DataInput.TextInputLayout"
                android:hint="@string/til_hint_keterangan">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_actv_attribute_2"
                style="@style/DataInput.TextInputLayout.ExposedDrowpdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:hint="Attribute 2"
                android:labelFor="@id/actv_attribute_2"
                android:visibility="gone"
                tools:visibility="visible">

            <AutoCompleteTextView
                    android:id="@+id/actv_attribute_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</ScrollView>
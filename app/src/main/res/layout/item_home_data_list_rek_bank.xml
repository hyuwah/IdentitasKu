<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/CardView.Home.Row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="12dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/btn_copy_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout"
                android:layout_width="268dp">
            <TextView
                    android:id="@+id/tv_data_type"
                    tools:text="Rekening Bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Subtitle2"/>
            <TextView
                    tools:text="Bank BTPN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_data_bank"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
            <TextView
                    tools:text="900012341515179000123415151790001234151517900012341515179000123415151790001234151517900012341515179000123415151790001234151517"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_data_value"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_copy_value"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="Copy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.617"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

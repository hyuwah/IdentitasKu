<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" style="@style/CardView.Home.Row"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="32dp" app:srcCompat="@drawable/ic_ktp"
                android:id="@+id/iv_icon" android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_desc_data_icon"
        />

        <LinearLayout
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_copy_value"
                app:layout_constraintLeft_toRightOf="@id/iv_icon"
                android:layout_width="0dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content">
            <TextView
                    tools:text="Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_data_type"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>
            <TextView
                    tools:text="Data Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_data_value"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_copy_value"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/colorPrimary"
                android:text="@string/button_copy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
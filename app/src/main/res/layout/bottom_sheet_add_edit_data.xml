<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              app:behavior_hideable="true"
              app:behavior_peekHeight="56dp"
              android:paddingTop="10dp"
              app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View android:layout_width="30dp" android:layout_height="5dp"
          android:layout_gravity="center"
          android:background="@drawable/swipe_up_handle"/>

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/add_new_data_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp" android:layout_marginBottom="12dp"
            android:background="#a0cccccc"/>
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinner_data_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:hintText="Select Category..."
            android:layout_marginBottom="16dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp" android:layout_marginBottom="12dp"
            android:background="#a0cccccc"/>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!--TODO DEPRECATED DELETE-->
            <com.google.android.material.textfield.TextInputLayout
                    style="@style/DataInput.TextInputLayout"
                    android:id="@+id/til_default" android:hint="Data*">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--Attribute 1-->
            <!--TODO DEPRECATED DELETE-->
            <com.google.android.material.textfield.TextInputLayout
                    tools:visibility="visible"
                    style="@style/DataInput.TextInputLayout"
                    android:id="@+id/til_attr1" android:hint="Attribute 1"
                    android:visibility="gone">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--Attribute 2-->
            <!--TODO DEPRECATED DELETE-->
            <com.google.android.material.textfield.TextInputLayout
                    tools:visibility="visible"
                    style="@style/DataInput.TextInputLayout"
                    android:id="@+id/til_attr2" android:hint="Attribute 2"
                    android:visibility="gone">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--Attribute 3-->
            <!--TODO DEPRECATED DELETE-->
            <com.google.android.material.textfield.TextInputLayout
                    tools:visibility="visible"
                    style="@style/DataInput.TextInputLayout"
                    android:id="@+id/til_attr3" android:hint="Attribute 3"
                    android:visibility="gone">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--Attribute 4-->
            <!--TODO DEPRECATED DELETE-->
            <com.google.android.material.textfield.TextInputLayout
                    tools:visibility="visible"
                    style="@style/DataInput.TextInputLayout"
                    android:id="@+id/til_attr4" android:hint="Attribute 4"
                    android:visibility="gone">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--Attribute 5-->
            <!--TODO DEPRECATED DELETE-->
            <com.google.android.material.textfield.TextInputLayout
                    tools:visibility="visible"
                    style="@style/DataInput.TextInputLayout"
                    android:id="@+id/til_attr5" android:hint="Attribute 5"
                    android:visibility="gone">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <FrameLayout
                    android:id="@+id/fl_dynamic_data_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <!--TODO DEPRECATED DELETE-->
    <Button
            style="@style/DataInput.Save.Button"
            android:id="@+id/btn_save"
            app:icon="@drawable/ic_add"
            android:enabled="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
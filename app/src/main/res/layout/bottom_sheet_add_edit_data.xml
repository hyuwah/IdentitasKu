<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              app:behavior_hideable="true"
              app:behavior_peekHeight="56dp"
              android:padding="16dp"
              app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Add New Data"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginBottom="12dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp" android:id="@+id/view" android:layout_marginBottom="12dp"
            android:background="#a0cccccc"/>
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinner_data_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintText="Select Data Type..."
            android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/til_default" android:hint="Data"
            android:textColorHint="@android:color/black" android:layout_marginBottom="8dp">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>
    <!--Attribute 1-->
    <com.google.android.material.textfield.TextInputLayout
            tools:visibility="visible"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/til_attr1" android:hint="Attribute 1"
            android:textColorHint="@android:color/black" android:visibility="gone" android:layout_marginBottom="8dp">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>
    <!--Attribute 2-->
    <com.google.android.material.textfield.TextInputLayout
            tools:visibility="visible"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/til_attr2" android:hint="Attribute 2"
            android:textColorHint="@android:color/black" android:visibility="gone" android:layout_marginBottom="8dp">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>
    <!--Attribute 3-->
    <com.google.android.material.textfield.TextInputLayout
            tools:visibility="visible"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/til_attr3" android:hint="Attribute 3"
            android:textColorHint="@android:color/black" android:visibility="gone" android:layout_marginBottom="8dp">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>
    <!--Attribute 4-->
    <com.google.android.material.textfield.TextInputLayout
            tools:visibility="visible"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/til_attr4" android:hint="Attribute 4"
            android:textColorHint="@android:color/black" android:visibility="gone" android:layout_marginBottom="8dp">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>
    <!--Attribute 5-->
    <com.google.android.material.textfield.TextInputLayout
            tools:visibility="visible"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/til_attr5" android:hint="Attribute 5"
            android:textColorHint="@android:color/black" android:visibility="gone" android:layout_marginBottom="8dp">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
            android:id="@+id/btn_save"
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" app:icon="@drawable/ic_add"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon" android:layout_marginTop="8dp"/>
</LinearLayout>